{
  "manifest_version": 2,
  "name": "demado",
  "version": "0.1.60",
  "description": "ブラゲーのランチャー",
  "permissions" : [
    "downloads",
    "storage",
    "activeTab"
  ],
  "icons" : {
    "48"  : "src/img/icon/icon.48.png",
    "128" : "src/img/icon/icon.128.png"
  },
  "browser_action": {
    "default_icon": "src/img/icon/icon.48.png",
    "default_popup":"src/html/popup.html"
  },
  "background": {
    "scripts":[
      "src/js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [
        "src/js/app.js"
      ]
    }
  ],
  "commands": {
    "capture": {
      "suggested_key": {
        "default": "Ctrl+Shift+0"
      },
      "description":"出窓のスクショ撮ります. Priscのインストールが必要です."
    }
  },
  "options_page" : "src/html/options.html"
}
