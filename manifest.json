{
  "manifest_version": 2,
  "name": "demado",
  "version": "0.2.6",
  "description": "ブラゲーのランチャー",
  "permissions" : [
    "downloads",
    "tabs",
    "<all_urls>",
    "storage",
    "activeTab"
  ],
  "background": {
    "scripts":[
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["/js/content_script.js"]
    }
  ],
  "commands": {
    "capture": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S",
        "windows": "Ctrl+Shift+S"
      },
      "description":"Priscでスクショします"
    },
    "mute": {
      "suggested_key": {
        "default": "Ctrl+Shift+M",
        "mac": "Command+Shift+M",
        "windows": "Ctrl+Shift+M"
      },
      "description":"ミュートします"
    }
  },
  "options_page" : "html/configs.html"
}
